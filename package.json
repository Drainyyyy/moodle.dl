{
  "name": "moodle.download",
  "version": "1.0.14",
  "private": true,
  "type": "module",
  "license": "MIT",
  "description": "Mass download Moodle course materials with folder structure preservation",
  "scripts": {
    "prepare:version": "node scripts/sync-version.mjs",
    "version:set": "node scripts/set-version.mjs",
    "dev": "cross-env VITE_ENABLE_SOURCEMAPS=true VITE_BUILD_TARGET=chrome node scripts/build.mjs --watch",
    "prebuild:chrome": "cross-env VITE_BUILD_TARGET=chrome node scripts/sync-version.mjs",
    "build:chrome": "cross-env VITE_BUILD_TARGET=chrome node scripts/build.mjs",
    "prebuild:firefox": "cross-env VITE_BUILD_TARGET=firefox node scripts/sync-version.mjs",
    "build:firefox": "cross-env VITE_BUILD_TARGET=firefox node scripts/build.mjs",
    "prebuild:firefox:compat": "cross-env VITE_BUILD_TARGET=firefox-compat node scripts/sync-version.mjs",
    "build:firefox:compat": "cross-env VITE_BUILD_TARGET=firefox-compat node scripts/build.mjs",
    "build:all": "npm run build:chrome && npm run build:firefox && npm run build:firefox:compat",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "vitest run --coverage",
    "test:unit": "vitest run --coverage",
    "test:e2e": "playwright test",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "dependencies": {
    "jszip": "^3.10.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.0",
    "@types/chrome": "^0.0.280",
    "@types/firefox-webext-browser": "^120.0.3",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^20.17.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitest/coverage-v8": "^4.0.18",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "jsdom": "^25.0.1",
    "prettier": "^3.4.2",
    "typescript": "^5.6.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  }
}
